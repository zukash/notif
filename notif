#!/bin/bash
# notif - macOS Notification Center controller

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

show_usage() {
    cat << EOF
Usage: notif <command>

Commands:
    expand      Expand notification stack
    collapse    Collapse notification stack
    toggle      Toggle between expand/collapse
    click       Click first notification
    close       Close first notification

Examples:
    notif expand    # Expand notification stack
    notif collapse  # Collapse stack
    notif toggle    # Toggle expand/collapse
    notif click     # Click first notification
    notif close     # Close first notification
EOF
}

case "$1" in
    expand|collapse|toggle|click|close)
        osascript "$SCRIPT_DIR/notif.applescript" "$1"
        ;;
    -h|--help|help|"")
        show_usage
        ;;
    *)
        echo "Error: Unknown command '$1'"
        echo ""
        show_usage
        exit 1
        ;;
esac
